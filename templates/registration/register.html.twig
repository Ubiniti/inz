{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/register.css') }}">
{% endblock %}

{% form_theme registrationForm 'layout/bootstrap_4_layout.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="reg-form-container container">
        <h1>Register</h1>

        {{ form_start(registrationForm) }}
            {{ form_row(registrationForm.username) }}
            {{ form_row(registrationForm.email) }}
            {{ form_row(registrationForm.country) }}
            {{ form_row(registrationForm.birthday) }}
            {{ form_row(registrationForm.plainPassword) }}
            {{ form_row(registrationForm.avatar) }}
            {{ form_row(registrationForm.termsAccepted) }}

            <br>
            <button class="btn btn-primary w-100">Register</button>
        {{ form_end(registrationForm) }}
    </div>
{% endblock %}
