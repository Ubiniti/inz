{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
    <div class="container">
        <div class="form-container row pt-5">
            <a class="btn btn-success" href="{{ path('app_category_new') }}">Dodaj kategoriÄ™</a>
            {{ form_start(form, {'attr': {
                'id': 'uploadForm',
                'data-success': path(success_route, {'channel_name':app.user.channel.name})
            }}) }}
                {{ form_row(form.title) }}
                {{ form_row(form.description) }}
                {{ form_row(form.file) }}
                {{ form_row(form.thumbnail) }}
                {{ form_row(form.price) }}
                {{ form_row(form.categories) }}
                {{ form_row(form.watermark) }}
                {{ form_row(form.isPublic) }}
                <div class="progress mt-2">
                    <div
                            id="upload_progress"
                            class="progress-bar progress-bar-striped progress-bar-animated bg-info"
                            role="progressbar"
                            style="width: 0%"
                            aria-valuenow="50"
                            aria-valuemin="0"
                            aria-valuemax="100"
                            data-progress="0"
                    ></div>
                </div>
                {{ form_row(form.submit) }}
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/video_upload.js') }}"></script>
    <script src="{{ asset('js/fileUpload.js') }}"></script>
{% endblock %}